<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.Cevaplar">
    <ContentPage.Content>
        <StackLayout>
            <ListView  ItemsSource="{Binding Cevaplarim}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid>
                             <Label  Grid.Row="1" Grid.Column="0" FontSize="14" Margin="10, 0, 5, 0" Text="{Binding Adi}" />
                             <Label Grid.Row="1" Grid.Column="1" FontSize="14" Margin="10, 0, 5, 0" Text="{Binding Cevap}" />
                              
                             
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>